<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI.LMSystem.Views.ModifyCoursePage"
             xmlns:vm="clr-namespace:MAUI.LMSystem.ViewModels"
             x:DataType="vm:ModifyCourseViewModel">
    <VerticalStackLayout>
        <Button
            Text="Back"
            Command="{Binding GoBackCommand}"/>
        <Grid HorizontalOptions="Center"
              VerticalOptions="Center"
              RowDefinitions="Auto, Auto, Auto, Auto"
              RowSpacing="10"
              Margin="30">
            <Button Grid.Row="0" Text="Add Assignment" Command="{Binding AddAssignmentCommand}" />
            <Button Grid.Row="1" Text="Add Announcement" Command="{Binding AddAnnouncementCommand}"/>
            <Button Grid.Row="2" Text="Create Module" Command="{Binding CreateModuleCommand}" />
            <Button Grid.Row="3" Text="Add Student to Roster" Command="{Binding AddStudentToRosterCommand}" />

        </Grid>
    </VerticalStackLayout>
</ContentPage>
