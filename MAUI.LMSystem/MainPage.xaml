<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI.LMSystem.MainPage"
             xmlns:local="clr-namespace:MAUI.LMSystem.ViewModels"
             x:DataType="local:MainViewModel">
    <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
        <HorizontalStackLayout Spacing="20">
            <Button Grid.Column="1" Margin="5" Text="Instructor view"
                    WidthRequest="300" HeightRequest="200"
                    Command="{Binding InstructorViewCommand}" />
            <Button Grid.Column="2" Margin="5" Text="Student view"
                    WidthRequest="300" HeightRequest="200"
                    Command="{Binding StudentViewCommand}" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>

