<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI.LMSystem.MainPage"
             xmlns:local="clr-namespace:MAUI.LMSystem.ViewModels"
             x:DataType="local:MainViewModel">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
       <!--Top Row with title message and View buttons-->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Label
                Grid.Column="0"
                Margin="5"
                FontSize="Header"
                VerticalOptions="Center"
                Text="Learning Management System"
                />
            <Button
                Grid.Column="1"
                Margin="5"
                Text="Instructor view"
                Command="{Binding InstructorViewCommand}"
                />
            <Button
                Grid.Column="2"
                Margin="5"
                Text="Student view"
                Command="{Binding StudentViewCommand}"
                />

        </Grid>
        
    </Grid>
</ContentPage>

